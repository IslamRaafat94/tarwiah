@using nwc.Tarwya.Application.ViewModels.Dashboard
@model DashBoardVm
@{
    ViewData["Title"] = "Index";
    ViewData["breadcrumb1"] = Labels.SystemAnalytics;
}

<div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
    <div>
        <h4 class="mg-b-0 tx-spacing--1">@Labels.Dashboard @DateTime.Now.Year</h4>
    </div>
</div>

<div class="row row-xs">
    <div class="col-sm-6 col-lg-3">
        <div class="card card-body">
            <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">@Labels.TotalComplaints</h6>
            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">@Model.ComplaintsCount</h3>
                <p class="tx-11 tx-color-03 mg-b-0"></p>
            </div>
        </div>
    </div><!-- col -->
    <div class="col-sm-6 col-lg-3 mg-t-10 mg-sm-t-0">
        <div class="card card-body">
            <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">@Labels.Feedbacks</h6>
            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">@Model.FeedbacksCount</h3>
                <p class="tx-11 tx-color-03 mg-b-0"></p>
            </div>
        </div>
    </div><!-- col -->
    <div class="col-sm-6 col-lg-3 mg-t-10 mg-lg-t-0">
        <div class="card card-body">
            <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">@Labels.FeedbacksRate</h6>
            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">@Model.FeedbacksRate</h3>
                <p class="tx-11 tx-color-03 mg-b-0"></p>
            </div>
        </div>
    </div><!-- col -->
    <div class="col-sm-6 col-lg-3 mg-t-10 mg-lg-t-0">
        <div class="card card-body">
            <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">@Labels.PendingComplaints</h6>
            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">@Model.SyncPendingComplaintsCount</h3>
                <p class="tx-11 tx-color-03 mg-b-0"></p>
            </div>
        </div>
    </div><!-- col -->
</div>